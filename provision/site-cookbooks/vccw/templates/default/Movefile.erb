local:
  vhost: "<%= @url %>"
  wordpress_path: "<%= @wpdir %>"

  database:
    name: "<%= @dbname %>"
    user: "<%= @dbuser %>"
    password: "<%= @dbpassword %>"
    host: "<%= @dbhost %>"

staging:
  vhost: "http://example.com"
  wordpress_path: "/var/www/your_site" # use an absolute path here

  database:
    name: "database_name"
    user: "user"
    password: "password"
    host: "localhost"
    charset: "utf8"

  exclude:
    - ".git/"
    - ".gitignore"
    - ".sass-cache/"
    - "bin/"
    - "tmp/*"
    - "Gemfile*"
    - "Movefile"
    - "wp-config.php"
    - "wp-content/*.sql"

